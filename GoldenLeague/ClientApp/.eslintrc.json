{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        // "eslint:recommended",
        // "plugin:vue/essential",
        "plugin:vue/vue3-recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "vue"
    ],
    "rules": {
        "prettier/prettier": [
            "error", 
            { 
                "endOfLine": "auto", 
                "trailingComma": "none",
                "tabWidth": 2            }
        ]
    }
}
