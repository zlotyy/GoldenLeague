{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        // "plugin:vue/essential",
        "plugin:vue/vue3-recommended",
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "vue"
    ],
    "rules": {
        "prettier/prettier": ["error", { "endOfLine": "auto", "trailingComma": "none", "tabWidth": 2 }],
        "no-plusplus": "off",
        "no-debugger": "warn",
        "import/no-unresolved": "off"
    }
}